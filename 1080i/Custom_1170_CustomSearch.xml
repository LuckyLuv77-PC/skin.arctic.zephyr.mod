<?xml version="1.0" encoding="UTF-8"?>
<window type="window" id="1170">
    <onload condition="String.IsEmpty(Skin.String(searchterm))">Back</onload>
    <onunload>ClearProperty(searchterm,home)</onunload>
    <onload condition="!String.IsEmpty(Window(home).Property(searchterm))">RunScript(script.embuary.helper,action=resetposition,container=3000||3101||3201||3301||3401||3501||3601||3701||3801||3901||4001||4101||4201||4301||4401||4501||4901||5001)</onload>
    <defaultcontrol always="true">3000</defaultcontrol>
    <controls>
        <include>GlobalBackground</include>
        <include>Furniture_Clock</include>
        <include>Furniture_Flags</include>
        <control type="group">
            <include>Animation.Common</include>


            <!-- Menu -->
            <control type="group">                
                <animation condition="Control.HasFocus(9000)" effect="slide" end="100,0" start="0,0" reversible="true" time="300" tween="sine">Conditional</animation>
                <control type="group">
                    <left>-100</left>
                    <control type="image">                    
                        <width>180</width>
                        <height>1080</height>
                        <texture colordiffuse="Fallback">common/white.png</texture>
                    </control>
                </control>            

                <!-- Results -->
                <control type="grouplist" id="3000">
                    <top>90</top>
                    <include content="def_left" condition="Skin.HasSetting(old.widgets.movement)"><param name="left" value="70" /></include>
                    <left>0</left>
                    <right>0</right>
                    <orientation>vertical</orientation>
                    <height>830</height>
                    <include>ScrolltimeWidgetsList</include>            
                    <itemgap>0</itemgap>
                    <usecontrolcoords>true</usecontrolcoords>                
                    <include condition="!String.IsEmpty(Skin.String(searchterm))">Custom_Search_Items</include>
                </control>            
                <control type="label">
                    <align>center</align>
                    <centertop>50%</centertop>
                    <height>38</height>
                    <font>SmallNavi</font>
                    <width>auto</width>
                    <textcolor>Dark1</textcolor>
                    <label>31222</label>
                    <visible>!Integer.IsGreater(Container(3000).NumItems,0) + !Container(3000).IsUpdating</visible>
                    <include>Animation.Vertical.Widgets.Title</include>
                </control> 
            </control> 
            
            <control type="group">
                <left>0</left>
                <top>140</top>
                <animation condition="!Control.HasFocus(9000)" effect="fade" end="33" start="100" time="300">Conditional</animation>
                <animation condition="Control.HasFocus(9000)" effect="slide" end="50,0" start="0,0" reversible="true" time="300" tween="sine">Conditional</animation>
                <control type="image">
                    <left>0</left>
                    <top>0</top>
                    <width>80</width>
                    <height>80</height>
                    <texture colordiffuse="$VAR[ColorHighlight]">globalsearch-roundbutton.png</texture>
                </control>
                <control type="image">
                    <left>25</left>
                    <top>25</top>
                    <width>30</width>
                    <height>30</height>
                    <texture colordiffuse="FFF0F0F0">common/lupe.png</texture>
                </control>
                <control type="button" id="9000">
                    <label/>
                    <texturefocus/>
                    <texturenofocus/>
                    <onclick>Skin.SetString(searchterm)</onclick>
                    <ondown>3000</ondown>
                    <onleft>3000</onleft>
                    <onright>3000</onright>
                    <onup>3000</onup>
                </control>
            </control>           
            <include>Furniture_Flags</include>
            <include>SearchNavigationArrows</include>
        </control>
    </controls>
</window>
